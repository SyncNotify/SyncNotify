<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Setting_Text_Main_Title" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
    </Style>
    <Style x:Key="Setting_Text_Description" TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,1,0,2"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.615"/>
    </Style>
    <Style x:Key="Welcome_Text_Title" TargetType="TextBlock">
        <Setter Property="Margin" Value="20,20,20,0"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>
    <Style x:Key="Welcome_Text_Description" TargetType="TextBlock">
        <Setter Property="Margin" Value="20,20,0,0"/>
    </Style>
</ResourceDictionary>