<UserControl
    x:Class="SyncNotify.Controls.IconText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SyncNotify.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:ui1="clr-namespace:Windows.UI.Xaml.Controls;assembly=Windows"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <ui:FontIcon VerticalAlignment="Center" Icon="{Binding Icon}" />
        <TextBlock
            Margin="{Binding IconMargin}"
            VerticalAlignment="Center"
            Text="{Binding Text}" />
    </StackPanel>
</UserControl>
